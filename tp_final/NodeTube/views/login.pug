div(class="modal fade", id="loginModal", tabindex="-1", role="dialog",data-backdrop="false", ng-controller="AuthController")
  .modal-dialog(role="document", style="width:450px")
    .modal-content
      .modal-header.text-center
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        .logo Node<span class="thin">Tube</span></a>
      .modal-body
        .text-center
          h4.text-center {{form.fields.title}}
          p.lead {{form.fields.subtitle}}
        form(class="form")
          .form-group
            label.control-label Username: 
            input(type="text", placeholder="JohnDoe", class="form-control", ng-model="form.fields.username")
          .form-group
            label.control-label Password: 
            input(type="password", placeholder="p4s5w0rd", class="form-control", ng-model="form.fields.password")  
          .form-group
            button(class="btn btn-primary lead btn-full-width", ng-click="form.onSubmit()") {{form.fields.action}}
            .custom-hr-container
                <span class="custom-hr"></span> {{form.fields.alt}} <span class="custom-hr"></span>
            button(class="btn btn-default lead btn-full-width", ng-click="form.onChangeAction()") {{form.fields.other_action}}