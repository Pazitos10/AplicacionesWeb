extends layout

block navigation_bar
    .landing-content
        .container
            .row
                .col-lg-8.col-lg-offset-2.col-xs-12
                    .logo-container
                        h1.text-center Book Search
                    form(action="/libros/buscar/", id="search-form", method="post")
                        input(id='search_term', name='search_term', type='text', 
                                placeholder='Ej.: El principito', class="form-control custom-input", required="", style="margin-bottom:20px")
    script.
        $('#search_term').keydown(function(e){
            if (e.keyCode === 13){
                if($(this).val().length > 0){
                    $('#search-form').submit();
                }
            }
        });
